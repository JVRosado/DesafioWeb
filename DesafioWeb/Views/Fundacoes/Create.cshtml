@{
    Layout = "_Layout";
    ViewData["Title"] = "Cadastrar Fundação";
}

<div class="container-cadastro">
    <h1 class="titulo-cadastro">@ViewData["Title"]</h1>

    <!-- Mensagem de sucesso ou erro -->
    @if(ViewBag.Mensagem != null)
    {
        <p class="mensagem @(ViewBag.Mensagem == "Cadastro efetuado com sucesso!" ? "sucesso" : "erro")">
            @ViewBag.Mensagem
        </p>
    }

    <p class="descricao-cadastro">Preencha os dados da fundação abaixo:</p>

    <form method="post" action="/Fundacoes/Create" class="form-cadastro">
        <div class="form-group">
            <label for="Nome">Nome:</label>
            <input type="text" id="Nome" name="Nome" required />
        </div>

        <div class="form-group">
            <label for="CNPJ">CNPJ:</label>
            <input type="text" id="CNPJ" name="CNPJ" required />
        </div>

        <div class="form-group">
            <label for="Email">E-mail:</label>
            <input type="email" id="Email" name="Email" />
        </div>

        <div class="form-group">
            <label for="Telefone">Telefone:</label>
            <input type="text" id="Telefone" name="Telefone" />
        </div>

        <div class="form-group">
            <label for="InstituicaoApoiada">Instituição Apoiada:</label>
            <input type="text" id="InstituicaoApoiada" name="InstituicaoApoiada" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn-cadastro">Cadastrar</button>
        </div>
    </form>
</div>
