@{
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro de Fundações";
}

<div class="container-fundacoes">
    <h1 class="titulo-fundacoes">@ViewData["Title"]</h1>

    <p class="descricao-fundacoes">
        Este sistema permite gerenciar informações de fundações, incluindo cadastro, atualização, 
        busca e exclusão de registros. Com uma interface simples e funcional, ele facilita o 
        controle das informações essenciais de cada instituição de forma rápida e organizada.
    </p>

    <p class="subtitulo-fundacoes">Escolha uma operação:</p>

    <div class="botoes-fundacoes">
        <a href="/Fundacoes/Create" class="link-botao">
            <button class="btn-fundacao cadastrar">Cadastrar Fundação</button>
        </a>
        <a href="/Fundacoes/Search" class="link-botao">
            <button class="btn-fundacao pesquisar">Pesquisar Fundação</button>
        </a>
        <a href="/Fundacoes/Edit" class="link-botao">
            <button class="btn-fundacao editar">Editar Fundação</button>
        </a>
        <a href="/Fundacoes/Delete" class="link-botao">
            <button class="btn-fundacao excluir">Excluir Fundação</button>
        </a>
    </div>
</div>
