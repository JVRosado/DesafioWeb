@model DesafioWeb.Models.Fundacao

@{
    Layout = "_Layout";
    ViewData["Title"] = "Pesquisar Fundação";
}

<div class="container-pesquisa">
    <h1 class="titulo-pesquisa">@ViewData["Title"]</h1>

    <!-- Formulário de busca -->
    <form asp-action="Search" method="post" class="form-pesquisa">
        <div class="form-group">
            <label for="cnpj">CNPJ:</label>
            <input type="text" id="cnpj" name="cnpj" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn-pesquisa">Pesquisar</button>
        </div>
    </form>

    <!-- Mensagem de erro ou status -->
    @if (ViewBag.Mensagem != null)
    {
        <p class="mensagem erro">@ViewBag.Mensagem</p>
    }

    <!-- Exibe os dados da fundação se encontrados -->
    @if (Model != null)
    {
        <div class="resultado-pesquisa">
            <h2>Resultado da Pesquisa</h2>
            <ul>
                <li><strong>Nome:</strong> @Model.Nome</li>
                <li><strong>CNPJ:</strong> @Model.CNPJ</li>
                <li><strong>Email:</strong> @Model.Email</li>
                <li><strong>Telefone:</strong> @Model.Telefone</li>
                <li><strong>Instituição Apoiadora:</strong> @Model.InstituicaoApoiada</li>
            </ul>
        </div>
    }
</div>
