@model DesafioWeb.Models.Fundacao

@{
    Layout = "_Layout";
    ViewData["Title"] = "Excluir Fundação";
}

<div class="container-excluir">
    <h1 class="titulo-excluir">@ViewData["Title"]</h1>

    <!-- Formulário para buscar a fundação -->
    <form asp-action="SearchFoundationToDelete" method="post" class="form-busca">
        <div class="form-group">
            <label for="cnpj">CNPJ:</label>
            <input type="text" id="cnpj" name="cnpj" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn-busca">Buscar</button>
        </div>
    </form>

    <!-- Mensagens de status -->
    @if (ViewBag.Mensagem != null)
    {
        <p class="mensagem">
        @ViewBag.Mensagem</p>
    }

    <!-- Exibe os dados da fundação e o botão de exclusão -->
    @if (Model != null)
    {
        <div class="resultado-excluir">
            <h2>Fundação encontrada</h2>
            <ul>
                <li><strong>Nome:</strong> @Model.Nome</li>
                <li><strong>CNPJ:</strong> @Model.CNPJ</li>
                <li><strong>Email:</strong> @Model.Email</li>
                <li><strong>Telefone:</strong> @Model.Telefone</li>
                <li><strong>Instituição Apoiadora:</strong> @Model.InstituicaoApoiada</li>
            </ul>

            <!-- Botão de confirmação -->
            <form asp-action="ConfirmDelete" method="post">
                <input type="hidden" name="cnpj" value="@Model.CNPJ" />
                <button type="submit" class="btn-excluir">Confirmar Exclusão</button>
            </form>
        </div>
    }
</div>
