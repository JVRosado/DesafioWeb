@model DesafioWeb.Models.Fundacao

@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar Fundação";
}

<div class="container-editar">
    <h1 class="titulo-editar">@ViewData["Title"]</h1>

    <!-- Formulário para buscar pelo CNPJ -->
    <form asp-action="Edit" method="post" class="form-busca">
        <div class="form-group">
            <label for="cnpj">CNPJ:</label>
            <input type="text" id="cnpj" name="cnpj" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn-busca">Buscar</button>
        </div>
    </form>

    <!-- Mensagens de status -->
    @if (ViewBag.Mensagem != null)
    {
        <p class="mensagem erro">@ViewBag.Mensagem</p>
    }

    <!-- Exibir os dados encontrados e permitir edição -->
    @if (Model != null)
    {
        <div class="resultado-editar">
            <h2>Editar informações da Fundação</h2>

            <form asp-action="ConfirmEdit" method="post" class="form-editar">
                <input type="hidden" asp-for="CNPJ" />

                <div class="form-group">
                    <label>Nome:</label>
                    <input asp-for="Nome" />
                </div>

                <div class="form-group">
                    <label>Email:</label>
                    <input asp-for="Email" />
                </div>

                <div class="form-group">
                    <label>Telefone:</label>
                    <input asp-for="Telefone" />
                </div>

                <div class="form-group">
                    <label>Instituição Apoiadora:</label>
                    <input asp-for="InstituicaoApoiada" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-confirmar">Confirmar Alterações</button>
                </div>
            </form>
        </div>
    }
</div>
